package exer01_lancar_dado_6mil_vx;

import java.util.Random;

public class DadoPrincipal {

	public static int randomizarDado()
	{
		Random random = new Random();
		int valorSorteado = random.nextInt(6) + 1;
		return valorSorteado;
	}
	
		public static void main(String[] args) {
		
			int faces [] = new int[6];
			int x, dado;
			dado=0;		
			
			for (x = 0; x <6000; x++) {
				dado = randomizarDado();
				//========= USANDO O CASE BREAK ==========
				/*
				switch (dado) {
				case 1:
					faces[0]++;
					break;
				case 2:
					faces[1]++;
					break;
				case 3:
					faces[2]++;
					break;
				case 4:
					faces[3]++;
					break;
				case 5:
					faces[4]++;
					break;
				case 6:
					faces[5]++;
					break;
				}
				*/	
				//========= USANDO O ELSE IF ==========
				/*
				if (dado==1) {
					faces[0]++;
				} else if (dado==2) {
					faces[1]++;
				} else if (dado==3) {
					faces[2]++;
				} else if (dado==4) {
					faces[3]++;
				} else if (dado==5) {
					faces[4]++;
				} else if (dado==6) {
					faces[5]++;
				}
				*/
				//========= FORMA CORRETA ==========
				faces [dado]++;
			}
					
			for (x = 0; x <6; x++) {
				System.out.println("FACE "+ (x+1) +" : " + faces[x]);
			}		
			
		}
}

